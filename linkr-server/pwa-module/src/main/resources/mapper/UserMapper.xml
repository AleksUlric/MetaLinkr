<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aleks.linkrmix.pwa.mapper.UserMapper">

    <!-- 根据手机号查询用户 -->
    <select id="selectByPhone" resultType="com.aleks.linkrmix.pwa.model.entity.User">
        SELECT * FROM users 
        WHERE phone = #{phone} 
        AND status = 1
        LIMIT 1
    </select>

    <!-- 根据昵称查询用户 -->
    <select id="selectByNickname" resultType="com.aleks.linkrmix.pwa.model.entity.User">
        SELECT * FROM users 
        WHERE nickname = #{nickname} 
        AND status = 1
        LIMIT 1
    </select>

</mapper>
